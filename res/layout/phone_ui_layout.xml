<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dip"
    android:paddingRight="10dip" 
    android:layout_gravity="center">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dip"
        android:layout_gravity="center"
        >
       <Spinner
       	 	android:id="@+id/select_action"
        	android:layout_width="0dip"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:prompt="@string/action_prompt" 
        	android:layout_marginRight="10dip"
        	android:verticalScrollbarPosition="right"
        	android:scrollbars="vertical"/>
        <Button
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:id="@+id/manage_action_button"
	        android:padding="5dp"
	        android:text="@string/manage_action_button_label"
        />
    </LinearLayout>
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:id="@+id/status_view"
        android:layout_margin="8dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:id="@+id/gravity_view"
        android:layout_margin="4dp"
        />
    <ScrollView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="20dip"
	    android:paddingRight="20dip"
	    android:layout_marginBottom="20dip"
        >
	    <TextView 
	        android:layout_height="wrap_content"
	        android:layout_gravity="left"
	        android:id="@+id/accelerometer_view"
	        android:layout_width="wrap_content"	        
	        >
	    </TextView>
    </ScrollView>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dip"      
        android:layout_gravity="center"
        style="?android:attr/buttonBarStyle" >
        <Button 
            android:id="@+id/start_button"
            android:layout_height="wrap_content"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:text="@string/start_button_label"
            android:layout_marginRight="10dip"
            style="?android:attr/buttonBarButtonStyle"/>

        <Button 
            android:id="@+id/stop_button"
            android:layout_height="wrap_content"
            android:layout_width="0dip"
            android:layout_weight="1"         
            android:text="@string/stop_button_label"
            style="?android:attr/buttonBarButtonStyle"/>        
    </LinearLayout>
