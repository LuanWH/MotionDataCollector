<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="30dip"
    android:paddingLeft="30dip"
    android:paddingRight="30dip"
    android:paddingTop="-10dip" >

    <TextView
        style="@android:style/TextAppearance.Holo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/start_menu_headline"
        android:textSize="30sp"
        android:gravity="center" />
    <TextView
        style="@android:style/TextAppearance.Holo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:text="@string/start_menu_headline_2"
        android:textSize="15sp"
        android:gravity="center" />        

    <Button
        android:id="@+id/enter_recording_button"
        style="@android:style/Theme.Translucent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="22sp" 
        android:text="@string/collect_data_button_label" />
    <Button
        android:id="@+id/normalize_button"
        style="@android:style/Theme.Translucent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="22sp" 
        android:text="@string/normalize_button_label" />    
    <Button
        android:id="@+id/view_data_button"
        style="@android:style/Theme.Translucent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="22sp"
        android:text="@string/view_data_button_label" /> 
    <Button
        android:id="@+id/view_stats_button"
        style="@android:style/Theme.Translucent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="22sp"
        android:text="@string/stat_button_label" />         
    <Button
        android:id="@+id/settings_button"
        android:layout_width="fill_parent"
        style="@android:style/Theme.Translucent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="22sp"
        android:text="@string/settings_button_label"/>
    <Button
        android:id="@+id/about_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@android:style/Theme.Translucent"
        android:layout_marginTop="15dp"
        android:textSize="22sp"
        android:text="@string/about_button_label"/>            

</LinearLayout>
